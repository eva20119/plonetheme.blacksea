<section class="ptb-95 client-main client-bg align-center dark-bg" id='cover_news' >
    <div class="container">
      <div class="client-inner">
        <div id="client" class="owl-carousel">
          <div class="item client-detail" tal:repeat="news view/newsBrain">
            <div class="client-img" tal:define="obj python: news.getObject()" >
              <img src="++theme++blacksea/images/testimonial_img1.jpg">
            </div>
            <h4 class="sub-title client-title">${news/Title}</h4>
            <p>${news/Description}</p>
          </div>   
        </div>
      </div>
    </div>
</section>


